<Window x:Class="Kiosk.Admin_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin_Window" 
        WindowStyle ="none" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Width="1024" Height="768" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="20">Выберите таблицу для редактирования</TextBlock>
                <ComboBox Height="30" HorizontalAlignment="Left" Margin ="0,0,30,0"  Name="comboBox1" VerticalAlignment="Top" Width="400" FontSize="16" SelectionChanged="comboBox1_SelectionChanged" />
                <Button Visibility="Hidden" Content="OK" Name="table_ok" Width="60" Click="table_ok_Click"></Button>
            </StackPanel>
            <StackPanel Name="table" Height="750">
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
