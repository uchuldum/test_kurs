<Window x:Class="Kiosk.pass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="pass" Height="300" Width="300"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Image Source="Resources/logo.png"></Image>
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock>Введите логин</TextBlock>
                <TextBox Name="login"  Width="100" Margin="18,0,0,10" ></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock>Введите пароль</TextBlock>
                <PasswordBox Name="password" Width="100" Margin="10,0,0,10" Password=""></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="20" HorizontalAlignment="Center">
                <Button Content="Вход" Margin="0,0,10,0" Name="ok" Width="50" Click="ok_Click">
                    
                </Button>
                <Button Content="Выход" Name="no" Width="50" Click="no_Click">

                </Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
